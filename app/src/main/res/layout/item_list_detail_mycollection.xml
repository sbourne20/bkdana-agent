<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52.7dp"
    android:background="@drawable/rectangle_listdetail">

    <id.bkdana.agent.Util.widget.MontserratSemiBoldTextView
        android:id="@+id/tv_id_item_listdetailmycollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="PM-FB7FFCOB5787"
        android:textColor="#585f6f"
        android:textSize="11.3sp" />

    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
        android:id="@+id/tv_tgl_item_listdetailmycollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="11 November 2018"
        android:textColor="#96a1ba"
        android:textSize="12.2sp"
        android:layout_below="@id/tv_id_item_listdetailmycollection"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text="+ "
        android:textColor="#20dc86"
        android:textSize="17.5sp"
        android:layout_toLeftOf="@id/tv_tgh_item_listdetailmycollection"/>

    <id.bkdana.agent.Util.widget.MontserratSemiBoldTextView
        android:id="@+id/tv_tgh_item_listdetailmycollection"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text="Rp. 342.000.000"
        android:textColor="#585f6f"
        android:textSize="14sp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>