<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fbfd"
    android:scrollbars="vertical"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical"
        android:background="@drawable/bg_copy_13"
        android:paddingLeft="29dp"
        android:paddingTop="27dp">


        <ImageView
            android:id="@+id/iv_back_survey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/layer_6"
            android:layout_centerVertical="true"
            android:paddingRight="22.3dp"/>

        <id.bkdana.agent.Util.widget.MontserratBoldTextView
            android:id="@+id/cap_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back_survey"
            android:textSize="24.2sp"
            android:textColor="@color/white_two"
            android:lineSpacingExtra="-6.8sp"
            android:text="Form Survey"
            />

        <id.bkdana.agent.Util.widget.WorkSansRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cap_survey"
            android:layout_toRightOf="@id/iv_back_survey"
            android:textSize="14.3sp"
            android:textColor="#f5f5f5"
            android:text="Data Usaha"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="22.3dp"
                android:orientation="vertical"
                android:background="@drawable/shape_4"
                android:paddingTop="14dp">

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15.2sp"
                    android:textColor="#585f6f"
                    android:text="ID Transaksi"/>

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:id="@+id/tv_dataUsaha_masterLoadId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/topaz"
                    android:text=""/>


                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10.7dp"
                    android:textSize="15.2sp"
                    android:textColor="#585f6f"
                    android:text="Product"/>

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:id="@+id/tv_dataUsaha_produktitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="17.7dp"
                    android:textSize="20sp"
                    android:textColor="@color/topaz"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textColor="#fd666666"
                    android:text="* Alamat Usaha" />

                <id.bkdana.agent.Util.widget.MontserratMediumEditText
                    android:id="@+id/et_alamat_usaha_peminjam"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="17.3dp"
                    android:gravity="top"
                    android:textSize="13.5sp"
                    android:background="@drawable/textview_bg"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textColor="#fd666666"
                    android:text="* Jenis Usaha" />

                <id.bkdana.agent.Util.widget.MontserratMediumEditText
                    android:id="@+id/et_jenis_usaha_peminjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="17.3dp"
                    android:textSize="13.5sp"
                    android:background="@drawable/textview_bg"/>>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textColor="#fd666666"
                    android:text="* Upload Foto" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="17.3dp"
                    android:textSize="13.5sp"
                    android:background="@drawable/rounded_rectangle_1313_1">


                    <ImageView
                        android:id="@+id/iv_upload_foto_usaha_peminjam"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ektp_contoh"
                        android:visibility="gone"/>


                    <ImageButton
                        android:id="@+id/btn_upload_foto_udaha_peminjam"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/iconfinder_camera_115759_copy"
                        android:background="@drawable/rounded_rectangle_1315"
                        android:layout_centerInParent="true"
                        android:visibility="visible"/>

                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp">


                <id.bkdana.agent.Util.widget.MontserratSemiBoldButton
                    android:id="@+id/btn_selanjutnya_peminjam"
                    android:layout_width="153dp"
                    android:layout_height="35.7dp"
                    android:background="@drawable/rounded_rectangle_1207_copy"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="Selanjutnya"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>