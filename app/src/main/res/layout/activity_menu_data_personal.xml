<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fbfd"
    android:scrollbars="vertical"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical"
        android:background="@drawable/bg_copy_13"
        android:paddingLeft="29dp"
        android:paddingTop="27dp">


        <ImageView
            android:id="@+id/iv_back_survey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/layer_6"
            android:layout_centerVertical="true"
            android:paddingRight="22.3dp"/>

        <id.bkdana.agent.widget.MontserratBoldTextView
            android:id="@+id/cap_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back_survey"
            android:textSize="24.2sp"
            android:textColor="@color/white_two"
            android:lineSpacingExtra="-6.8sp"
            android:text="Form Survey"
            />

        <id.bkdana.agent.widget.WorkSansRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cap_survey"
            android:layout_toRightOf="@id/iv_back_survey"
            android:textSize="14.3sp"
            android:textColor="#f5f5f5"
            android:text="Data Personal"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="22.3dp"
                android:orientation="vertical"
                android:background="@drawable/shape_4"
                android:paddingTop="14dp">

                <id.bkdana.agent.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15.2sp"
                    android:textColor="#585f6f"
                    android:text="ID Transaksi"/>

                <id.bkdana.agent.widget.MontserratMediumTextView
                    android:id="@+id/tv_id_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/topaz"
                    android:text="PM-FB7FFC0B5787"/>


                <id.bkdana.agent.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10.7dp"
                    android:textSize="15.2sp"
                    android:textColor="#585f6f"
                    android:text="Product"/>

                <id.bkdana.agent.widget.MontserratMediumTextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="17.7dp"
                    android:textSize="20sp"
                    android:textColor="@color/topaz"
                    android:text="PM-Pinjaman Mikro 3 Bulan"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <id.bkdana.agent.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textColor="#fd666666"
                    android:text="* Nama Lengkap" />

                <id.bkdana.agent.widget.MontserratMediumEditText
                    android:id="@+id/et_nama_peminjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="17.3dp"
                    android:textSize="13.5sp"
                    android:background="@drawable/textview_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <id.bkdana.agent.widget.MontserratMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textColor="#fd666666"
                    android:text="* Alamat" />

                <id.bkdana.agent.widget.MontserratMediumEditText
                    android:id="@+id/et_alamat_peminjam"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="17.3dp"
                    android:textSize="13.5sp"
                    android:background="@drawable/textview_bg"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <id.bkdana.agent.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.5sp"
                        android:textColor="#fd666666"
                        android:text="* No. KTP" />

                    <id.bkdana.agent.widget.MontserratMediumEditText
                        android:id="@+id/et_noktp_peminjam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="17.3dp"
                        android:textSize="13.5sp"
                        android:background="@drawable/textview_bg"/>>

                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp">


                <id.bkdana.agent.widget.MontserratSemiBoldButton
                    android:id="@+id/btn_selanjutnya_peminjam"
                    android:layout_width="153dp"
                    android:layout_height="35.7dp"
                    android:background="@drawable/rounded_rectangle_1207_copy"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="Selanjutnya"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>