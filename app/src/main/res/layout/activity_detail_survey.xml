<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.DetailScanBarcodeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/bg_copy_13"
        android:orientation="vertical"
        android:paddingLeft="29dp"
        android:paddingTop="27dp">


        <ImageView
            android:id="@+id/iv_back_detailmysurvey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="22.3dp"
            android:src="@drawable/layer_6" />

        <id.bkdana.agent.Util.widget.MontserratBoldTextView
            android:id="@+id/cap_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back_detailmysurvey"
            android:lineSpacingExtra="-6.8sp"
            android:text="Detail My Survey"
            android:textColor="@color/white_two"
            android:textSize="24.2sp" />

        <id.bkdana.agent.Util.widget.WorkSansRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cap_survey"
            android:layout_toRightOf="@id/iv_back_detailmysurvey"
            android:text="Detail peminjam yang telah anda survey"
            android:textColor="#f5f5f5"
            android:textSize="14.3sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rectangle_detail_up"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="10dp">

                <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                    android:id="@+id/tv_id_transaksi_detailmysurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/topaz"
                    android:textSize="20sp" />


                <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                    android:id="@+id/tv_id_produk_detailmysurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/ico_name" />

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:id="@+id/tv_nama_deatilmysurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/topaz"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/ico_address" />

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:id="@+id/tv_alamat_detailmysurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/topaz"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/ico_id_card" />

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:id="@+id/tv_ktp_detailmysurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/topaz"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_rectangle_detail_bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_img_detailMysurvey"
                    android:layout_width="330dp"
                    android:layout_height="180.3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingLeft="23dp"
                        android:paddingRight="10dp"
                        android:text="Jenis Usaha: "
                        />

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:id="@+id/tv_jenis_detailsurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingRight="23dp"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingLeft="23dp"
                        android:paddingRight="10dp"
                        android:text="Alamat Usaha: "
                        />

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:id="@+id/tv_alamat_usaha_detailsurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingLeft="23dp"
                        android:paddingRight="23dp"
                        android:text=""
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingLeft="23dp"
                        android:paddingRight="10dp"
                        android:text="Omset: "
                        />

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:id="@+id/tv_omset_detailsurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingRight="23dp"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingLeft="23dp"
                        android:paddingRight="18dp"
                        android:text="Biaya: "
                        />

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:id="@+id/tv_biaya_detailsurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingRight="23dp"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingLeft="23dp"
                        android:paddingRight="22dp"
                        android:text="Laba: "
                        />

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:id="@+id/tv_laba_detailsurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.5sp"
                        android:textColor="#655ee0"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="2.5sp"
                        android:paddingRight="23dp"
                        android:text=""
                        />
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>