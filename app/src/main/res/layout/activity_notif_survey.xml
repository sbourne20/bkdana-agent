<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fbfd"
    android:scrollbars="vertical"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical"
        android:background="@drawable/bg_copy_13"
        android:paddingLeft="29dp"
        android:paddingTop="27dp">


        <id.bkdana.agent.widget.MontserratBoldTextView
            android:id="@+id/cap_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back_survey"
            android:textSize="24.2sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white_two"
            android:lineSpacingExtra="-6.8sp"
            android:text="Notif Survey"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30.7dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="-700dp"
        android:gravity="center"
        android:background="@drawable/rounded_rectangle_kotak_1">

        <ImageView
            android:id="@+id/iv_notif_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_smart_object"
            android:layout_centerHorizontal="true"/>

        <id.bkdana.agent.widget.MontserratMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_notif_survey"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textColor="#585f6f"
            android:lineSpacingExtra="7.7sp"
            android:text="Survey berhasil terkirim.\nTim Analis akan segera\nmenindaklanjutinya. " />

    </RelativeLayout>


</LinearLayout>