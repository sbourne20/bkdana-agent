<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DetailScanBarcodeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/bg_copy_13"
        android:orientation="vertical"
        android:paddingLeft="29dp">


        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="22.3dp"
            android:src="@drawable/layer_6" />

       <ImageView
           android:id="@+id/img_profile"
           android:layout_width="77dp"
           android:layout_height="77dp"
           android:src="@drawable/mask_by_oval_copy_3"
           android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle_kotak"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <id.bkdana.agent.Util.widget.MontserratMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="15.2sp" />

        <id.bkdana.agent.Util.widget.MontserratMediumTextView
            android:id="@+id/tv_nama_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />


        <id.bkdana.agent.Util.widget.MontserratMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="E-mail"
            android:textSize="15.2sp" />

        <id.bkdana.agent.Util.widget.MontserratMediumTextView
            android:id="@+id/tv_email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />

        <id.bkdana.agent.Util.widget.MontserratMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Phone"
            android:textSize="15.2sp" />

        <id.bkdana.agent.Util.widget.MontserratMediumTextView
            android:id="@+id/tv_phone_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />

    </LinearLayout>


    <id.bkdana.agent.Util.widget.MontserratSemiBoldButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="153dp"
        android:layout_height="35.7dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rectangle_1207_copy"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>