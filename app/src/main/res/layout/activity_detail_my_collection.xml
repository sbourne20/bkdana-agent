<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.DetailScanBarcodeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/bg_copy_13"
        android:orientation="vertical"
        android:paddingLeft="29dp"
        android:paddingTop="27dp">


        <ImageView
            android:id="@+id/iv_back_detailmycollection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="22.3dp"
            android:src="@drawable/layer_6" />

        <id.bkdana.agent.Util.widget.MontserratBoldTextView
            android:id="@+id/cap_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back_detailmycollection"
            android:lineSpacingExtra="-6.8sp"
            android:text="Detail Collection"
            android:textColor="@color/white_two"
            android:textSize="24.2sp" />

        <id.bkdana.agent.Util.widget.WorkSansRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cap_survey"
            android:layout_toRightOf="@id/iv_back_detailmycollection"
            android:text="List Detail Collection"
            android:textColor="#f5f5f5"
            android:textSize="14.3sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_margin="25dp"
                android:background="@drawable/belum_lunas_collection">

                <id.bkdana.agent.Util.widget.WorkSansSemiBoldTextView
                    android:id="@+id/tv_id_detailmycollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text=""
                    android:textColor="@color/topaz"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <id.bkdana.agent.Util.widget.MontserratBoldTextView
                    android:id="@+id/tv_nama_detailmycollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="4.8sp"
                    android:text=""
                    android:textColor="@color/brownish_grey"
                    android:textSize="14.2sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_id_detailmycollection" />

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text="Total Pinjaman"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama_detailmycollection" />2dp" />

                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text="Sisa Hutang"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.461" />


                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text="Tenor"
                    android:textColor="@color/brownish_grey"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.892"
                    app:layout_constraintStart_toEndOf="@+id/tv_id_detailmycollection"
                    app:layout_constraintTop_toTopOf="parent" />


                <id.bkdana.agent.Util.widget.MontserratMediumTextView
                    android:id="@+id/tv_tenor_detailmycollection"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text=""
                    android:textColor="@color/brownish_grey"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.945"
                    app:layout_constraintStart_toEndOf="@+id/tv_nama_detailmycollection"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <id.bkdana.agent.Util.widget.MontserratBoldTextView
                    android:id="@+id/tv_total_pinjam_detailmycollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text=""
                    android:textColor="#655ee0"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.936"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tenor_detailmycollection" />

                <id.bkdana.agent.Util.widget.MontserratBoldTextView
                    android:id="@+id/tv_sisa_hutang_detailmycollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="8dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="3sp"
                    android:text=""
                    android:textColor="#ff0000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.936"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/tv_total_pinjam_detailmycollection" />
            </android.support.constraint.ConstraintLayout>

            <id.bkdana.agent.Util.widget.MontserratMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textSize="15.7sp"
                android:textColor="#0f9ebc"
                android:text="Catatan Penagihan"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_tagihan_detailmycollection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>