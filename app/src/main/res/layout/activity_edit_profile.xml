<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".view.activity.EditProfileActivity">



    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/bg_copy_13"
        android:orientation="vertical"
        android:paddingLeft="29dp">


        <ImageView
            android:id="@+id/iv_back_editprofile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="22.3dp"
            android:src="@drawable/layer_6" />

        <ImageView
            android:id="@+id/img_profile_editprofile"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@drawable/mask_by_oval_copy_3"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/rl_title_infromasi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_dialog_editprofile"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ico_check"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_gravity="center_vertical"/>

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14.5sp"
                        android:layout_toRightOf="@id/iv_check"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="2.8sp"
                        android:text="Infromasi Akun"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="11dp"
                        android:src="@drawable/polygon_1"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_editprofile_informasi"
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginRight="8dp"
                        android:text="Nama"
                        android:textColor="#fda1b7c2"
                        android:textSize="13.5sp" />


                    <EditText
                        android:id="@+id/et_nama_editprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/rounded_editprofile" />

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="8dp"
                        android:text="Email"
                        android:textColor="#fda1b7c2"
                        android:textSize="13.5sp" />


                    <EditText
                        android:id="@+id/et_email_editprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="5dp"
                        android:enabled="false"
                        android:background="@drawable/rounded_abu_editprofilke" />

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="8dp"
                        android:text="Phone"
                        android:textColor="#fda1b7c2"
                        android:textSize="13.5sp" />


                    <EditText
                        android:id="@+id/et_phone_editprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/rounded_editprofile" />


                    <id.bkdana.agent.Util.widget.MontserratSemiBoldButton
                        android:id="@+id/btn_update_informasi_editprofile"
                        android:layout_width="153dp"
                        android:layout_height="35.7dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/rounded_rectangle_1207_copy"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="visible"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/rl_title_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_dialog_editprofile"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_check_password"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ico_check"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_gravity="center_vertical"/>

                    <id.bkdana.agent.Util.widget.WorkSansRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14.5sp"
                        android:layout_toRightOf="@id/iv_check_password"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="2.8sp"
                        android:text="Ubah Password"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="11dp"
                        android:src="@drawable/polygon_1"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_editprofile_password"
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginRight="8dp"
                        android:text="Old Password"
                        android:textColor="#fda1b7c2"
                        android:textSize="13.5sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_old_password_editprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:paddingLeft="5dp"
                            android:inputType="textPassword"
                            android:background="@drawable/rounded_editprofile" />

                        <ImageView
                            android:id="@+id/btn_eye_visible_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_eye"
                            android:paddingTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/btn_eye_invisible_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_invisible"
                            android:paddingTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone"/>

                    </RelativeLayout>


                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="8dp"
                        android:text="New Password"
                        android:textColor="#fda1b7c2"
                        android:textSize="13.5sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_new_password_editprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:paddingLeft="5dp"
                            android:inputType="textPassword"
                            android:background="@drawable/rounded_editprofile" />

                        <ImageView
                            android:id="@+id/btn_eye_visible_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_eye"
                            android:paddingTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/btn_eye_invisible_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_invisible"
                            android:paddingTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <id.bkdana.agent.Util.widget.MontserratMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="8dp"
                        android:text="Confirm Password"
                        android:textColor="#fda1b7c2"
                        android:textSize="13.5sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_confrim_password_editprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:inputType="textPassword"
                            android:background="@drawable/rounded_editprofile" />

                        <ImageView
                            android:id="@+id/btn_eye_visible_conf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_eye"
                            android:paddingTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/btn_eye_invisible_conf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_invisible"
                            android:paddingTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <id.bkdana.agent.Util.widget.MontserratSemiBoldButton
                        android:id="@+id/btn_update_password_editprofile"
                        android:layout_width="153dp"
                        android:layout_height="35.7dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/rounded_rectangle_1207_copy"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="visible"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>